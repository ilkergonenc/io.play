<header class="bg-slate-50 shadow-md">
  <nav class="grid grid-cols-6 py-4">

    <div class="flex">
      <input 
        class="m-auto px-3 py-1 placeholder-gray-400 border border-slate-300 rounded shadow-sm" 
        type="search" 
        placeholder="Search..." 
      />
    </div>

    <div class="col-span-4 flex justify-between items-center px-4 border-x border-slate-300">
      <div>
        <span class="brand">{{ meta.name }}</span>
      </div>

      <div class="flex items-center space-x-4"> 
        {% for item in navs.header.main %}
          <a 
            href={{ root.path }}{{ item.link }}
            {% if item.class %}class="{{ item.class }}"{% endif %}
          >
            {{ item.title }}
          </a>
        {% endfor %}
      </div>
    </div>

    <div class="flex justify-center items-center space-x-8"> 
      {% for item in socials %}
        <a 
          href={{ item.link }}
          title={{ item.platform }}
        >
          {% render '@/svg', icon: item.icon %}
        </a>
      {% endfor %}
    </div>

  </nav>
</header>

