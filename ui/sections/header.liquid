<header class="bg-slate-50 shadow-md">
  <nav class="grid grid-cols-6 py-4">

    <div class="hidden justify-end px-4 xl:flex">
      <input 
        class="placeholder-gray-400 border border-slate-300 rounded shadow-sm px-4" 
        type="search" 
        placeholder="Search" 
      />
    </div>

    <div class="col-span-6 flex justify-between items-center px-4 border-x border-slate-300 xl:col-span-4">
      <div>
        <a href={{ root.path }} class="brand">{{ meta.name }}</a>
      </div>

      <div class="flex items-center space-x-4"> 
        {% for item in navs.header.main %}
          <a 
            href={{ root.path }}{{ item.link }}
            {% if item.class %}class="{{ item.class }}"{% endif %}
          >
            {{ item.title }}
          </a>
        {% endfor %}
      </div>
    </div>

    <div class="hidden justify-start items-center px-4 space-x-6 xl:flex"> 
      {% for item in socials %}
        <a 
          href={{ item.link }}
          title={{ item.platform }}
          target="_blank"
        >
          {% render '@/svg', icon: item.icon %}
        </a>
      {% endfor %}
    </div>

  </nav>
</header>

