<!DOCTYPE html>
<html lang={{ meta.lang }}>
<head>
  {% block head %}{% render "docs/head", title: title, _root: _root %}{% endblock %}
</head>
<body>
  <!-- Header ======================================================= -->
  {% block header %}{% render "docs/header" %}{% endblock %}
  <!-- Header | End ================================================= -->

  {% block main %}
    <!-- Main ======================================================= -->
    <main class="w-full mx-auto">
      {% block %}<!-- MainContent -->{% endblock %}
    </main>
    <!-- Main | End ================================================= -->
  {% endblock %}

  <!-- Footer ======================================================= -->
  {% block footer %}{% render "footer" %}{% endblock %}
  <!-- Footer | End ================================================= -->

  {% block foot %}{% render "docs/foot", _root: _root %}{% endblock %}
  <!-- body & html | End ======================================================= -->
</body>
</html>
