{
  "name": "io-play",
  "description": "Static WebUI (HTML, CSS & JavaScript) renderer with preset transcompilers, bundlers, linters",
  "version": "1.0.0",
  "keywords": [
    "static",
    "web",
    "ui",
    "markdown",
    "yaml",
    "frontMatter",
    "liquidjs",
    "tailwindcss",
    "postcss",
    "rollup",
    "babel",
    "html",
    "css",
    "js",
    "W3Validation",
    "stylelint",
    "eslint"
  ],
  "author": "İlker Gönenç",
  "license": "GPL-3.0",
  "scripts": {
    "data": "gulp --gulpfile cli/liquid-md.config.js staticDATA",
    "html": "gulp --gulpfile cli/liquid-md.config.js staticHTML",
    "view": "npm-run-all --serial data html",
    "css": "postcss --config cli/postcss.config.js ui/main.css -o @/assets/css/main.css --env=production",
    "js": "rollup --config cli/rollup.config.js",
    "build": "npm-run-all --parallel view js --serial css",
    "watch": "npm-run-all --parallel *-watch",
    "data-watch": "chokidar \".io.*.yaml\" -c \"npm run data\"",
    "html-watch": "chokidar \"kit/**/*.(md|html)\" \"ui/**/*.(md|liquid|html)\" -c \"npm run html\"",
    "css-watch": "chokidar \"ui/**/*.css\" -c \"npm run css\"",
    "js-watch": "chokidar \"ui/**/*.js\" -c \"npm run js\"",
    "dist-watch": "chokidar \"@/**/*.html\" -c \"npm run css\"",
    "dev": "npm-run-all --parallel start watch",
    "dev-lint": "npm-run-all --parallel start watch lint",
    "lint": "npm-run-all --parallel *-lint",
    "fix": "npm-run-all --parallel *-fix",
    "css-lint": "stylelint --config cli/stylelint.config.js re/**/*.css",
    "css-fix": "stylelint --config cli/stylelint.config.js re/**/*.css --fix",
    "js-lint": "eslint --config cli/.eslintrc.js re/**/*.js",
    "js-fix": "eslint --config cli/.eslintrc.js re/**/*.js --fix",
    "html-lint": "node cli/w3.validate.js",
    "start": "live-server --open=@"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.1.0",
    "autoprefixer": "^10.4.2",
    "chokidar-cli": "^3.0.0",
    "cssnano": "^5.0.16",
    "eslint": "^8.8.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "gulp": "^4.0.2",
    "gulp-cli": "^2.3.0",
    "gulp-concat": "^2.6.1",
    "gulp-data": "^1.3.1",
    "gulp-front-matter": "^1.3.0",
    "gulp-html-beautify": "^1.0.1",
    "gulp-markdown": "^6.0.0",
    "gulp-rename": "^2.0.0",
    "js-yaml": "^4.1.0",
    "liquidjs": "^9.34.0",
    "live-server": "^1.2.1",
    "map-stream": "^0.0.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.6",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.0.2",
    "rollup": "^2.36.2",
    "rollup-plugin-terser": "^7.0.2",
    "stylelint": "^14.3.0",
    "stylelint-config-standard": "^24.0.0",
    "tailwindcss": "^3.0.18",
    "vnu-jar": "^21.10.12"
  }
}
